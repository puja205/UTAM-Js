{
    "selector": {
        "css": "body"
    },
    "root": true,
    "beforeLoad": [
        {
            "element": "document",
            "apply": "waitForDocumentReady"
        }
    ],
    "elements": [
        {
            "name": "persistentHeader",
            "selector": {
                "css": "header"
            },
            "elements": [
                {
                    "name": "menu",
                    "selector": {
                        "css": ".menu"
                    },
                    "elements": [
                        {
                            "public": true,
                            "name": "grammarMenuItem",
                            "selector": {
                                "css": "[data-navbar-id='grammar']"
                            },
                            "type": "clickable"
                        },
                        {
                            "public": true,
                            "type": "clickable",
                            "name": "menuItems",
                            "selector": {
                                "css": "li",
                                "returnAll": true
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "content",
            "public": true,
            "selector": {
                "css": "main.content"
            }
        },
        {
            "name": "careers",
            "public": true,
            "type": "clickable",
            "selector": {
                "css": ".sf-links li:nth-child(3) a"
            }
        }
    ]
}
