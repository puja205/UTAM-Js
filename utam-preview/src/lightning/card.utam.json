{
    "methods": [
        {
            "name": "getFooterText",
            "compose": [
                {
                    "element": "footer",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "getBodyText",
            "compose": [
                {
                    "element": "cardBody",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "getTitleText",
            "compose": [
                {
                    "element": "titleContainer",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "isNarrow",
            "compose": [
                {
                    "element": "narrow",
                    "apply": "isPresent"
                }
            ]
        }
    ],
    "shadow": {
        "elements": [
            {
                "name": "narrow",
                "selector": {
                    "css": "article[class*='slds-card_narrow']"
                }
            },
            {
                "name": "header",
                "selector": {
                    "css": "header"
                },
                "elements": [
                    {
                        "name": "titleContainer",
                        "selector": {
                            "css": "span[class*='slds-text-heading_small']"
                        }
                    },
                    {
                        "name": "button",
                        "type": "utam-lightning/pageObjects/button",
                        "selector": {
                            "css": "lightning-button"
                        },
                        "public": true
                    }
                ]
            },
            {
                "name": "cardBody",
                "selector": {
                    "css": ".slds-card__body"
                }
            },
            {
                "name": "footer",
                "selector": {
                    "css": ".slds-card__footer"
                }
            }
        ]
    }
}
