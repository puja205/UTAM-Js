{
    "type": "actionable",
    "methods": [
        {
            "name": "hasLabel",
            "compose": [
                {
                    "element": "root",
                    "apply": "containsElement",
                    "args": [
                        {
                            "value": {
                                "css": "label"
                            },
                            "type": "locator"
                        },
                        {
                            "value": true
                        }
                    ]
                }
            ]
        },
        {
            "name": "hasFocus",
            "compose": [
                {
                    "element": "input",
                    "apply": "isFocused"
                }
            ]
        },
        {
            "name": "getLabelText",
            "compose": [
                {
                    "element": "label",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "getValueText",
            "compose": [
                {
                    "element": "input",
                    "apply": "getValue"
                }
            ]
        },
        {
            "name": "setText",
            "compose": [
                {
                    "element": "input",
                    "apply": "scrollToTop"
                },
                {
                    "element": "input",
                    "apply": "click"
                },
                {
                    "element": "input",
                    "apply": "clear"
                },
                {
                    "element": "input",
                    "apply": "setText",
                    "args": [
                        {
                            "name": "text",
                            "type": "string"
                        }
                    ]
                }
            ]
        },
        {
            "name": "toggleCheckbox",
            "compose": [
                {
                    "element": "inputCheckbox",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "getCheckedState",
            "compose": [
                {
                    "element": "inputCheckbox",
                    "apply": "getAttribute",
                    "args": [
                        {
                            "value": "\"checked\""
                        }
                    ]
                }
            ]
        },
        {
            "name": "selectRadio",
            "compose": [
                {
                    "element": "inputRadio",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "getErrorText",
            "compose": [
                {
                    "element": "error",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "hasError",
            "compose": [
                {
                    "element": "error",
                    "apply": "isPresent"
                }
            ]
        },
        {
            "name": "isReadonly",
            "compose": [
                {
                    "element": "input",
                    "apply": "getAttribute",
                    "args": [
                        {
                            "value": "\"readonly\""
                        }
                    ]
                }
            ]
        },
        {
            "name": "isEnabled",
            "compose": [
                {
                    "element": "input",
                    "apply": "isEnabled"
                }
            ]
        },
        {
            "name": "isSelectable",
            "compose": [
                {
                    "element": "inputCheckbox",
                    "apply": "isEnabled"
                }
            ]
        },
        {
            "name": "scrollToCenter",
            "compose": [
                {
                    "element": "root",
                    "apply": "scrollToCenter"
                }
            ]
        },
        {
            "name": "hasDatetimepicker",
            "compose": [
                {
                    "element": "root",
                    "apply": "containsElement",
                    "args": [
                        {
                            "value": {
                                "css": "lightning-datetimepicker"
                            },
                            "type": "locator"
                        },
                        {
                            "value": true
                        }
                    ]
                }
            ]
        }
    ],
    "shadow": {
        "elements": [
            {
                "name": "label",
                "selector": {
                    "css": "label"
                },
                "elements": [
                    {
                        "name": "required",
                        "selector": {
                            "css": ".slds-required"
                        },
                        "public": true
                    }
                ]
            },
            {
                "name": "input",
                "type": ["actionable", "clickable", "editable"],
                "selector": {
                    "css": "input"
                }
            },
            {
                "name": "inputCheckbox",
                "type": ["clickable"],
                "selector": {
                    "css": "input[type='checkbox']"
                }
            },
            {
                "name": "inputRadio",
                "type": ["clickable"],
                "selector": {
                    "css": "input[type='radio']"
                }
            },
            {
                "name": "error",
                "selector": {
                    "css": ".slds-form-element__help"
                },
                "public": true
            },
            {
                "name": "datepicker",
                "public": true,
                "nullable": true,
                "type": "utam-lightning/pageObjects/datepicker",
                "selector": {
                    "css": "lightning-datepicker"
                }
            }
        ]
    }
}
